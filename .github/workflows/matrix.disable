name: Matrix
on:
  push:
jobs:
  test:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        node_version: ['20', '21', '22']
        browser: ['firefox', 'chrome', 'safari']
        exclude: 
          - node_version: '21'
            browser: 'safari'
        include:
          - node_version: '21'
            browser: 'edge'
          - node_version: '18'
            browser: 'safari'
    steps:
      - name: Print Node version and test browser
        run: echo "${{ matrix.node_version }} - ${{ matrix.browser }}"